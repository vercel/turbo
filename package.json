{
  "name": "turbo",
  "version": "0.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "docs"
    ]
  },
  "scripts": {
    "postinstall": "patch-package",
    "format": "prettier --write",
    "deduplicate": "npx yarn-deduplicate -s fewer yarn.lock",
    "deduplicate:check": "npx yarn-deduplicate -s fewer yarn.lock --list --fail",
    "docs": "./turbo run dev --scope='docs' --no-cache",
    "build": "./turbo run build --scope=docs",
    "turbo": "./turbo"
  },
  "devDependencies": {
    "lint-staged": "^12.1.2",
    "patch-package": "^6.4.7",
    "prettier": "^2.5.0",
    "simple-git-hooks": "^2.7.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx,md,mdx,js,jsx}": [
      "npm run format"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint-staged"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "test": {
        "dependsOn": [],
        "outputs": [
          "coverage/**/*"
        ]
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      },
      "deploy": {
        "dependsOn": [
          "build",
          "test",
          "lint"
        ],
        "outputs": []
      },
      "build": {
        "outputs": [
          "dist/**/*",
          "!dist/.vercel/**/*",
          ".next/**/*",
          "!.next/cache/**/*"
        ],
        "dependsOn": [
          "^build"
        ]
      }
    }
  }
}
